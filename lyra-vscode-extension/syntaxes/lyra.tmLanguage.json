{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Lyra",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#functions" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.lyra",
          "begin": "//",
          "end": "$"
        },
        {
          "name": "comment.block.lyra",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.lyra",
          "match": "\\b(if|else|while|for|procedure|return|var|set|try|catch|in)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.lyra",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.lyra",
          "match": "\\\\."
        }
      ]
    },
    "numbers": {
      "name": "constant.numeric.lyra",
      "match": "\\b[0-9]+(\\.[0-9]+)?\\b"
    },
    "functions": {
      "patterns": [
        {
          "name": "support.function.lyra",
          "match": "\\b(println|print|file|string|json|type|math)\\.\\w+\\b"
        },
        {
          "name": "support.function.lyra",
          "match": "\\b(println|print)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.lyra",
          "match": "(\\+|-|\\*|/|%|\\*\\*|==|!=|>|<|>=|<=|and|or|not)"
        }
      ]
    }
  },
  "scopeName": "source.lyra"
}
