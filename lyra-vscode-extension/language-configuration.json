{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""]
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""]
  ],
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(if|else|while|for|procedure).*\\{\\s*$",
    "decreaseIndentPattern": "^\\s*\\}\\s*$"
  },
  "folding": {
    "offSide": false,
    "markers": {
      "start": "^\\s*/\\*",
      "end": "^\\s*\\*/"
    }
  }
}
