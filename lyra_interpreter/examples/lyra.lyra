// LYRA QUICK COMMANDS
// 100% Pure Lyra - All Essential Commands in One File
//
// Save as: lyra.lyra or quick-commands.lyra
// Usage: lyra lyra.lyra [command] [args]
//
// This file provides quick access to all essential Lyra project commands
// No Python needed - everything is pure Lyra!

procedure main(args) {
  let cmd = "";
  
  if type.is_list(args) && type.get_length(args) > 0 {
    set cmd = args[0];
  }
  
  if cmd == "test" {
    cmd_test();
  }
  else if cmd == "examples" {
    cmd_examples();
  }
  else if cmd == "check" {
    cmd_check();
  }
  else if cmd == "status" {
    cmd_status();
  }
  else if cmd == "help" {
    cmd_help();
  }
  else {
    cmd_help();
  }
}

