# ============================================================
# PROBLEM 9: Even/Odd
# ============================================================
proc is_even(n: i32) -> i32 {
    if n % 2 == 0 {
        return 1;
    }
    return 0;
}

proc is_odd(n: i32) -> i32 {
    if n % 2 == 1 {
        return 1;
    }
    return 0;
}

