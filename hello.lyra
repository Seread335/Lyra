# ============================================================
# PROBLEM 1: Prime Number Checker
# ============================================================
proc is_prime(n: i32) -> i32 {
    if n < 2 {
        return 0;
    }
    var i: i32 = 2;
    while i * i <= n {
        if n % i == 0 {
            return 0;
        }
        i = i + 1;
    }
    return 1;
}

print("--- Problem 1: Prime Checker ---");
let prime_17: i32 = is_prime(17);
let prime_4: i32 = is_prime(4);
print("Is 17 prime? ");
print(prime_17);
print("Is 4 prime? ");
print(prime_4);
print("");

# ============================================================
# PROBLEM 2: Factorial (Recursion)
# ============================================================
proc factorial(n: i32) -> i32 {
    if n <= 1 {
        return 1;
    }
    return n * factorial(n - 1);
}

print("--- Problem 2: Factorial ---");
let fact_5: i32 = factorial(5);
let fact_10: i32 = factorial(10);
print("5! = ");
print(fact_5);
print("10! = ");
print(fact_10);
print("");

# ============================================================
# PROBLEM 3: GCD
# ============================================================
proc gcd(a: i32, b: i32) -> i32 {
    if b == 0 {
        return a;
    }
    return gcd(b, a % b);
}

print("--- Problem 3: GCD ---");
let gcd_48_18: i32 = gcd(48, 18);
let gcd_100_60: i32 = gcd(100, 60);
print("GCD(48, 18) = ");
print(gcd_48_18);
print("GCD(100, 60) = ");
print(gcd_100_60);
print("");

# ============================================================
# PROBLEM 4: Sum of Range
# ============================================================
proc sum_range(start: i32, end: i32) -> i32 {
    var sum: i32 = 0;
    var current: i32 = start;
    while current <= end {
        sum = sum + current;
        current = current + 1;
    }
    return sum;
}

print("--- Problem 4: Sum of Range ---");
let sum_1_10: i32 = sum_range(1, 10);
let sum_1_100: i32 = sum_range(1, 100);
print("Sum(1 to 10) = ");
print(sum_1_10);
print("Sum(1 to 100) = ");
print(sum_1_100);
print("");

# ============================================================
# PROBLEM 5: Fibonacci
# ============================================================
proc fibonacci(n: i32) -> i32 {
    if n <= 1 {
        return n;
    }
    return fibonacci(n - 1) + fibonacci(n - 2);
}

