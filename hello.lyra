# PROBLEM 8: Max and Min
# ============================================================
proc max(a: i32, b: i32) -> i32 {
    if a > b {
        return a;
    }
    return b;
}

proc min(a: i32, b: i32) -> i32 {
    if a < b {
        return a;
    }
    return b;
}

