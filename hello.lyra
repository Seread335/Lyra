let fib_8: i32 = fibonacci(8);
let fib_10: i32 = fibonacci(10);
print("Fib(8) = ");
print(fib_8);
print("Fib(10) = ");
print(fib_10);
print("");

# ============================================================
# PROBLEM 6: Power Function
# ============================================================
proc power(base: i32, exp: i32) -> i32 {
    if exp == 0 {
        return 1;
    }
    return base * power(base, exp - 1);
}

print("--- Problem 6: Power ---");
let pow_2_8: i32 = power(2, 8);
let pow_3_5: i32 = power(3, 5);
print("2^8 = ");
print(pow_2_8);
print("3^5 = ");
print(pow_3_5);
print("");

