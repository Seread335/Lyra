{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Lyra",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#functions" },
    { "include": "#operators" },
    { "include": "#variables" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.lyra",
          "begin": "//",
          "end": "$",
          "captures": {
            "0": {
              "name": "punctuation.definition.comment.lyra"
            }
          }
        },
        {
          "name": "comment.block.lyra",
          "begin": "/\\*",
          "end": "\\*/",
          "captures": {
            "0": {
              "name": "punctuation.definition.comment.lyra"
            }
          }
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.lyra",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.lyra",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.lyra",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.lyra",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.lyra",
          "match": "\\b\\d+\\.\\d+([eE][+-]?\\d+)?\\b"
        },
        {
          "name": "constant.numeric.integer.lyra",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.lyra",
          "match": "\\b(if|else|while|for|return|break|continue|try|catch|finally|match|case)\\b"
        },
        {
          "name": "keyword.declaration.lyra",
          "match": "\\b(var|const|let|proc|fn|func|type|struct|enum|class|trait|impl|is)\\b"
        },
        {
          "name": "keyword.other.lyra",
          "match": "\\b(as|in|of|and|or|not|true|false|null|nil|void|main)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "support.function.builtin.lyra",
          "match": "\\b(println|print|io\\.println|io\\.print|file\\.write_file|file\\.read_file|file\\.file_exists|file\\.file_size|file\\.delete_file|type\\.to_str|type\\.to_i32|type\\.type_of|string\\.strlen|string\\.uppercase|string\\.lowercase|string\\.trim|string\\.split|string\\.contains|math\\.sqrt|math\\.abs|json\\.parse|json\\.stringify)\\b"
        },
        {
          "name": "entity.name.function.lyra",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\("
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.lyra",
          "match": "(\\+|\\-|\\*|/|%|==|!=|<=|>=|<|>|&&|\\|\\||!|=|\\+=|\\-=|\\*=|/=)"
        },
        {
          "name": "punctuation.separator.lyra",
          "match": "(\\{|\\}|\\(|\\)|\\[|\\]|;|,|\\.|:|-\\>)"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.lyra",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  },
  "scopeName": "source.lyra"
}
